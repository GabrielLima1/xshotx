  <%= f.input :search, :placeholder => "Palavra que o Robo de Buscar"%>
  <%= f.input :nosearch, :placeholder => "Palavra que o Robo NÃƒO deve Buscar | Separar Palavras por Virgula!"%>
  <%= f.association :type %>
