<%- model_class = Information -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <%= will_paginate @informations %><br>
  <thead>
    <tr>
      <th>Robo</th>
      <th colspan="3"><%= model_class.human_attribute_name(:cep) %></th>
      <th colspan="3"><%= model_class.human_attribute_name(:usuario) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @informations.each do |information| %>
      <tr>
        <td><%= link_to information.robot.name, information_path(information) %></td>
        <td colspan="3"><%= information.cep %></td>
        <td colspan="3"><%= information.usuario %></td>
        <td>
          <%= link_to 'Detalhes', information_path(information), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      information_path(information),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @informations %><br>
<p>Total de <%= Information.all.length %> Info</p>
